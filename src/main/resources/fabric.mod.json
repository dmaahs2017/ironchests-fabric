{
  "schemaVersion": 1,
  "id": "ironchest",
  "version": "${version}",

  "name": "Ironchests for Fabric",
  "description": "This is a port of the Ironchests mod for Fabric",
  "authors": [
    "Dalton Maahs"
  ],
  "contact": {
    "homepage": "https://github.com/dmaahs2017/ironchests-fabric",
    "sources": "https://github.com/dmaahs2017/ironchests-fabric"
  },

  "license": "GPL-3",
  "icon": "assets/ironchest/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.fabricmc.ironchest.ExampleMod"
    ]
  },
  "mixins": [
    "ironchest.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": "~1.18.2",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
